{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription sur le site</h1>
    {{ form_start(form) }}

    {{ form_row(form.username , {'attr':{'placeholder':"nom d'utilisateur"}}) }}
    {{ form_row(form.email , {'attr':{'placeholder':"email d'utilisateur"}}) }}
    {{ form_row(form.password , {'attr':{'placeholder':"mot de passe"}}) }}
    {{ form_row(form.confirm_password , {'attr':{'placeholder':"confirmer votre mdp"}}) }}

    <button type="submit" class="btn btn-success">Inscriver vouz</button>
    {{ form_end(form) }}

{% endblock %}
