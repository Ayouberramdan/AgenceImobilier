{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/stylecard.css') }}">
{% endblock %}
{% block title %}Hello BlogController!{% endblock %}

{% block body %}

<section class="articles">
        {% for article in articles %}
        <article>
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{ article.image }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{article.title}}</h5>
                    <p class="card-text"{{ article.content | raw}}</p>
                    <p>Ecrit le {{ article.createdAt | date('d/m/y')}} a {{ article.createdAt | date('H:i')}}</p>
                    <a href="{{ path('blog_show' , {'id' : article.id}) }}" class="btn btn-primary">Lire la suite</a>
                </div>
            </div>
        </article>
        {% endfor %}
</section>

{% endblock %}
